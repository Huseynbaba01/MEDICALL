<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:layout_marginTop="5dp"
    android:id="@+id/itemOfRecyclerView"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardCircle"
        app:cardCornerRadius="40dp"
        app:contentPadding="0dp"
        android:layout_alignParentStart="true"
        android:shape="ring"
        android:layout_margin="16dp"
        android:thicknessRatio="1.9">
        <ImageView
            android:padding="1dp"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:id="@+id/viewCircle"
            android:src="@drawable/ambulance_example"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_medium"
        android:layout_toEndOf="@+id/cardCircle"
        android:text="Your notification here!"
        android:textColor="#9C9C9C"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Your notification date here!"
        android:textColor="#9C9C9C"
        android:textSize="12sp" />

