<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardCornerRadius="6dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_cancel_icon"
        />
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="73dp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/close"
        android:layout_height="wrap_content"
        android:text="Müraciəti ləğv etmək istədiyinizdən əminsiniz?"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_secondary"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="60dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginTop="15dp"
        android:text="@string/label_yes"
        android:layout_marginEnd="5.5dp"
        app:strokeColor="@color/main_blue"
        app:cornerRadius="6dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/btn_main"
        app:layout_constraintTop_toBottomOf="@id/message"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_main"
        app:layout_constraintStart_toEndOf="@id/btn_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_marginStart="5.5dp"
        android:text="@string/label_no"
        app:cornerRadius="6dp"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/message"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>