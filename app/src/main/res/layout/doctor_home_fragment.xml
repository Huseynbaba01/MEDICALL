<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.doctor_pages.DoctorHomeFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        app:boxCornerRadiusBottomEnd="6dp"

        app:boxCornerRadiusBottomStart="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        app:boxCornerRadiusTopStart="6dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/LoginTextInputLayoutStyle"
        app:hintEnabled="false"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:lines="1"
            android:includeFontPadding="false"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="@color/white"
            android:hint="@string/title_search"
            />
        
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        app:layout_constraintTop_toTopOf="@id/search_layout"
        app:layout_constraintEnd_toEndOf="@id/search_layout"
        android:layout_width="33dp"
        android:src="@drawable/search_icon"
        android:elevation="2dp"
        android:layout_height="33dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintBottom_toBottomOf="@id/search_layout"
        />

    <TextView
        android:id="@+id/label_requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_layout"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/main_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:text="@string/label_requests"
        android:textSize="16sp"
        />
    <View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/label_requests"
        android:background="@color/main_blue"
        android:layout_marginEnd="-16dp"
        android:layout_marginStart="-16dp"
        android:layout_marginTop="12dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inbox_items"
        android:layout_width="match_parent"
        tools:listitem="@layout/listitem_doctor_inbox"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hr"
        />

</androidx.constraintlayout.widget.ConstraintLayout>