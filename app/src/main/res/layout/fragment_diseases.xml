<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.DiseasesFragment">

    <RelativeLayout
        android:id="@+id/topPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp">

        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_medium"
            android:text="Müraciətin səbəbini seçin"
            android:textColor="@color/text_black"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/middle_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topPart"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/corona"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/diseases_background">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/corona_shadow" />

                <ImageView
                    android:id="@+id/iv_corona"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/corona" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_corona"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Koronavirus "
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/carCrash"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/diseases_background">

                <ImageView
                    android:id="@+id/carCrash_shadow"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/car_shadow" />

                <ImageView
                    android:id="@+id/iv_carCrash"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/car" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_carCrash"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Avtomobil qəzası"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/dizzy"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/diseases_background">

                <ImageView
                    android:id="@+id/iv_dizzy_shadow"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/dizzy_shadow" />

                <ImageView
                    android:id="@+id/iv_dizzy"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/dizzy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_dizzy"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Huşunu itirmə"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fever"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/diseases_background">

                <ImageView
                    android:id="@+id/iv_fever_shadow"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/fever_shadow" />

                <ImageView
                    android:id="@+id/iv_fever"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/fever" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_fever"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Yüksək hərarət"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/heartStorke"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/diseases_background">

                <ImageView
                    android:id="@+id/heart_shadow"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/heart_shadow" />

                <ImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/heart" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_heart"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Ürək tutuması"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bleeding"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/diseases_background">

                <ImageView

                    android:id="@+id/bleeding_shadow"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/blood_shadow" />

                <ImageView
                    android:id="@+id/iv_bleeding"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/blood" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_bleeding"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Qanaxma"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/middle_part"
        android:layout_alignParentBottom="true"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:paddingBottom="13dp">


        <TextView
            android:id="@+id/tv_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/poppins_medium"
            android:text="Digər"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mt_enterReason"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/mb_confirm"
            android:layout_below="@+id/tv_other"
            android:textAlignment="textStart"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/main_red"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:hint="Səbəbi daxil edin"
                android:textAlignment="textStart"
                android:textColor="@color/text_black"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/main_red"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_medium"
            android:padding="13dp"
            android:text="Səbəbi Təsdiq edin"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="6dp"
            app:elevation="5dp" />
    </RelativeLayout>


</RelativeLayout>